<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.CardPage1"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <Label Text="Тип КПП"/>
        <Entry Text="{Binding Transmission}"/>
        <Label Text="Ссылка на изображение"/>
        <Entry Text="{Binding Image}"/>
        <Label Text="Год выпуска"/>
        <Entry Text="{Binding God}"/>
        <Label Text="Руль"/>
        <Entry Text="{Binding Rul}"/>
        <Label Text="Владельцы"/>
        <Entry Text="{Binding Users}"/>
        <Label Text="ПТС"/>
        <Entry Text="{Binding PTS}"/>
        <Label Text="Таможня"/>
        <Entry Text="{Binding Tam}"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveAuto1"/>
            <Button Text="Удалить" Clicked="DeleteAuto1"/>
            <Button Text="Отмена" Clicked="Cancel1"/>
        </StackLayout>
    </StackLayout>
</ContentPage>